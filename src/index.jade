- var _pc={href:'javascript:void(0)'};
- var _hide={style:'display:none'};
- var _title='基于可靠性的单交叉口信号控制算法';
mixin _style(name)
    link(href='assets/css/' + name + '.css',rel='stylesheet')
mixin _script(name)
    script(src='assets/js/' + name + '.js')
mixin _icon(name,attr)
    if attr
        span.glyphicon(class='glyphicon-' + name)&attributes(attr)
    else
        span.glyphicon(class='glyphicon-' + name)
mixin _anchor(code,attr)
    if(attr)
        a(href="javascript:" + code)&attributes(attr)
            if block
                block
    else
        a(href="javascript:" + code)
            if block
                block

doctype
html(lang="zh-CN")
    head
        title=_title
        meta(charset="UTF-8")
        // load stylesheet
        - each name in ['normalize','foundation.min','my']
            +_style(name)
    body
        nav.top-bar(data-topbar)
            ul.title-area
                li.name: h1: a&attributes(_pc)=_title
            section.top-bar-section
                ul.right
                    li.has-dropdown
                        +_anchor('0') 测试
                        ul.dropdown
                            li: +_anchor('test()') 测试相位清空算法
                            li: +_anchor('test(0.5)') 测试服务水平算法(X=0.5)
                            li: +_anchor('test(0.7)') 测试服务水平算法（X=0.7)
                            li: +_anchor('test(0.85)') 测试服务水平算法(X=0.85)
        section.wrapper.row.all-height
            #sidebar.large-3.medium-4.columns.all-height
                #tab1
                    ul.breadcrumbs
                        li.current: +_anchor('0') 周期数据
                    //.row.collapse
                    //    .small-2.large-3.columns
                    //        span.prefix μ
                    //    .small-10.large-9.columns
                    //        input#aver(type='number',placeholder='均值')
                    //.row.collapse
                    //    .small-2.large-3.columns
                    //        span.prefix σ
                    //    .small-10.large-9.columns
                    //        input#stdd(type='number',placeholder='方差')
                    //.row.collapse
                    //    .small-2.large-3.columns
                    //        span.prefix λ
                    //    .small-10.large-9.columns
                    //        input#rate(type='number',placeholder='率参数')
                    input#L(type='number',placeholder='周期总损失时间')
                    input#n(type='number',placeholder='周期相位数')

                    +_anchor('next()',{class:'button fill expand'}) 继续
                span.space
                #tab2
                    ul.breadcrumbs
                        li: +_anchor('switchTab(0)') 周期数据
                        li.current: +_anchor('0') 相位分析
                    .in-panel
                        .in-group
                            label 第1相位
                            input#a(type='number',placeholder='可靠度')
